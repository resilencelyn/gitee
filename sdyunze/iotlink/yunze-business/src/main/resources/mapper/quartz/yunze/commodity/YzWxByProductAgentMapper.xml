<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunze.cn.mapper.commodity.YzWxByProductAgentMapper">


	<!-- 查询商品对应代理商  -->
	<select id="findConcise" parameterType="java.util.HashMap"  resultType="java.util.HashMap">
		SELECT
			a.dept_id,
			b.dept_name
		FROM
			yz_wx_by_product_agent a,
			sys_dept b
		<where>
			a.dept_id = b.dept_id
			AND del_flag = '0'
			AND status = '0'
		</where>
		ORDER BY b.order_num
	</select>


	<!--查询运费配置-->
	<select id="findByCardFare"  resultType="java.lang.String">
		SELECT
			config_value
		FROM
			sys_config
		<where>
			config_key = 'yunze.web.byCardFare'
		</where>
	</select>



</mapper> 