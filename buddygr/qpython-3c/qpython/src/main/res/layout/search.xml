<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_search_bottom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/search_bottom"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/buttonSearchPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_editor_arrow_left"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_editor_search"/>


        <ImageButton
            android:id="@+id/buttonSearchNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparency"
            android:padding="5dp"
            android:src="@drawable/ic_editor_arrow_right"/>

    </RelativeLayout>
</layout>